ncmpcpp () {
  docker run -ti --rm \
    -v /tmp/mpd:/tmp/mpd \
    --rm \
    --network host \
    germangb/ncmpcpp
}

feh () {

  docker run --rm \
    -v $HOME/Pictures:/root \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -e DISPLAY=$DISPLAY \
    germangb/feh "$@"
}

firefox () {

  docker run -d \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v $HOME/.firefox/mozilla:/home/firefox/.mozilla \
    -v $HOME/.firefox/cache:/home/firefox/.cache \
    -v $HOME/Downloads:/home/firefox/Downloads \
    -e DISPLAY=$DISPLAY \
    --name firefox \
    --device /dev/snd \
    --device /dev/dri \
    germangb/firefox "$@"
}

alsamixer () {

  docker run -ti --rm \
    --device /dev/snd \
    germangb/alsa-utils \
    alsamixer "$@"
}
