feh () {

  docker run --rm \
    -v $HOME/Pictures:/root/Pictures \
    -v $HOME/.wallpaper:/root/.wallpaper \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -e DISPLAY=$DISPLAY \
    germangb/feh "$@"
}

