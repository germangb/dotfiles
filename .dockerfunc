scrot () {

  docker run \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v $HOME/Pictures:/home/scrot \
    -e DISPLAY=$DISPLAY \
    germangb/scrot "$@"
}

gimp () {

  docker run \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v $HOME/Pictures:/home/gimp/Pictures \
    -e DISPLAY=$DISPLAY \
    --name gimp \
    --device /dev/dri \
    germangb/gimp "$@"
}

