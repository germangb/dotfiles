ncmpcpp () {
  docker run -ti --rm \
    -v /tmp/mpd:/tmp/mpd \
    --rm \
    --network host \
    germangb/ncmpcpp
}

feh () {

  docker run --rm \
    -v $HOME/Pictures:/root/Pictures \
    -v $HOME/.wallpaper:/root/.wallpaper \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -e DISPLAY=$DISPLAY \
    germangb/feh "$@"
}

chromium () {

  #docker run -d \
  docker run -ti \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v $HOME/.chromium/cache:/home/chromium/.cache \
    -v $HOME/Downloads:/home/chromium/Downloads \
    -v $HOME/Pictures:/home/chromium/Pictures \
    -e DISPLAY=$DISPLAY \
    --name chromium \
    --device /dev/snd \
    --device /dev/dri \
    germangb/chromium "$@"
}

firefox () {

  docker run -d \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v $HOME/.firefox/mozilla:/home/firefox/.mozilla \
    -v $HOME/.firefox/cache:/home/firefox/.cache \
    -v $HOME/Downloads:/home/firefox/Downloads \
    -v $HOME/Pictures:/home/firefox/Pictures \
    -e DISPLAY=$DISPLAY \
    --name firefox \
    --device /dev/snd \
    --device /dev/dri \
    --net host \
    germangb/firefox "$@"
}

alsamixer () {

  docker run -ti --rm \
    --device /dev/snd \
    germangb/alsa-utils \
    alsamixer "$@"
}
