docker-compose () {

  docker run --rm -ti \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -v $PWD:/bender:ro \
    germangb/docker-compose "$@"
}

gc () {
  docker run --rm \
    -v /var/run/docker.sock:/var/run/docker.sock \
    spotify/docker-gc
}

compton () {

  docker run -d \
    --device /dev/dri \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v $HOME/.config/compton.conf:/home/compton/.config/compton.conf \
    -e DISPLAY=$DISPLAY \
    germangb/compton "$@"
}

scrot () {

  docker run \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v $HOME/Pictures:/home/scrot \
    -e DISPLAY=$DISPLAY \
    germangb/scrot "$@"
}

gimp () {

  docker run \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v $HOME/Pictures:/home/gimp/Pictures \
    -e DISPLAY=$DISPLAY \
    --name gimp \
    --device /dev/dri \
    germangb/gimp "$@"
}

